extends layout

block content

  if !smpic
    form(role="form", method="post", class="mainform", action="/up", enctype="multipart/form-data")
      div.form-group
        label(for="upfile") Please select a picture or drag the picture here
        input(type="file", name="pic", id="upfile", accept="image/*")
      div.progress.progress-striped.active
        div.progress-bar(role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%")
      div.dragble
        Please drag the picture here
      button.btn.btn-default(type="submit") submit

  if smpic
    div.wp(style="width: #{smpic.width}px;")
      ul.pager
        li.previous
          a(href="/") back
      div.alert.alert-success
        h4 Uploaded successfully
        p Please draw a box and enter the link address in the picture below
      div.box(style="width: #{smpic.width}px; height: #{smpic.height}px;")
        each p in smpic.pics
          img(src="#{p}")
      div.generate
        button.btn.btn-primary.js-generate(data-name="#{name}") generate and preview

  script(src="/javascripts/jquery.js")
  script(src="/javascripts/all.js")
